{
  "name": "bluesky-scanner-app",
  "version": "0.1.0",
  "description": "A desktop application for discovering and following people on Bluesky",
  "author": "Your Name",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc && npm run copy-static",
    "copy-static": "npx copyfiles -u 2 src/renderer/index.html src/renderer/style.css dist/renderer",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@atproto/api": "latest"
  },
  "build": {
    "appId": "com.bluesky.scanner",
    "productName": "Bluesky Scanner",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asar": false,
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
